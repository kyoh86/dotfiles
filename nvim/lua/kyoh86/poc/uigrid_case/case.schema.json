{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "case.schema.json",
  "title": "uigrid case",
  "type": "object",
  "properties": {
    "scenario": {
      "type": "string",
      "description": "scenario.luaへの相対パスまたは絶対パス"
    },
    "width": {
      "type": "integer",
      "minimum": 1,
      "description": "UIの列数"
    },
    "height": {
      "type": "integer",
      "minimum": 1,
      "description": "UIの行数"
    },
    "data_home": {
      "type": "string",
      "description": "XDG_DATA_HOMEの相対/絶対パス"
    },
    "config_home": {
      "type": "string",
      "description": "XDG_CONFIG_HOMEの相対/絶対パス"
    },
    "out_dir": {
      "type": "string",
      "description": "出力先ディレクトリ"
    },
    "outputs": {
      "type": "object",
      "properties": {
        "json": { "$ref": "#/$defs/outputPath" },
        "ansi": { "$ref": "#/$defs/outputPath" },
        "html": { "$ref": "#/$defs/outputPath" }
      },
      "additionalProperties": false,
      "description": "出力ファイル名/出力設定"
    }
  },
  "additionalProperties": false,
  "$defs": {
    "outputPath": {
      "description": "出力ファイル名または'-'、無効化は'none'またはfalse",
      "anyOf": [
        { "type": "string" },
        { "type": "boolean", "const": false }
      ]
    }
  }
}
