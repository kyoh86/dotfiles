#!/bin/bash

# Usage: ./ubuntu24.md

set -ex

MODULE="${HOME}/Projects/github.com/kyoh86/dotfiles/setup/module"

"${MODULE}"/wsl
"${MODULE}"/apt_update
"${MODULE}"/apt_locale
"${MODULE}"/apt_install
"${MODULE}"/deno
"${MODULE}"/mise
"${MODULE}"/github
"${MODULE}"/chromium
"${MODULE}"/dotfiles

grep -Fwe docker /etc/group || sudo groupadd docker
sudo usermod -aG docker "${USER}"

"${MODULE}"/neovim
"${MODULE}"/zenhan
